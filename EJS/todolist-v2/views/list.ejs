<%- include('header'); -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% for (let i = 0; i < newListItem.length;  i++ ) { %>

  <form action="/delete" method="post">

    <div class="item">
      <input name="checkbox" value="<%= newListItem[i]._id %>" type="checkbox" onchange="this.form.submit()">
      <li><%= newListItem[i].name %></li>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>"></input>

  </form>

  <% } %>

  <form class="item" action="/" method="post">
    <input type="text" name="toDo" placeholder="New Item" required>
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>

</div>

<%- include('footer'); -%>
