<%- include('partials/header'); -%>

<h1>Hello</h1>
<p><%= startContent %></p>

<% posts.forEach(function(element) { %>

<h1> <%= element.title %> </h1>
<p>
  <% if (element.content.length <= 100) { %>
      <%= element.content %>
  <% } else { %>
      <%= element.content.substring(0, 100) + "..." %>
      <a href="/post/<%= element.title %>">Read More</a>
  <% } %>
</p>

<% }); %>

<%- include('partials/footer'); -%>
